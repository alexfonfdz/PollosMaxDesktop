{
  "name": "proyectofront",
  "productName": "Departamentos",
  "private": true,
  "version": "0.0.1",
  "main": "main.js",
  "author": "Alejandro Fontes y Daniel Ulloa",
  "description": "Proyecto de la materia de Desarrollo de Aplicaciones Web",
  "license": "MIT",
  "build": {
    "appId": "com.departamentos.app",
    "productName": "Departamentos",
    "win": {
      "target": "nsis",
      "icon": "src/img/depa.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/img/depa.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/img/depa.ico"
    }
  },
  "scripts": {
    "dev:windows": "electron-builder --win --dir",
    "pro:windows": "electron-builder --win",
    "dev:linux": "electron-builder --linux --dir",
    "pro:linux": "electron-builder --linux",
    "dev:macos": "electron-builder --macos --dir",
    "pro:macos": "electron-builder --macos",
    "dev": "electron .",
    "build2": "vite build",
    "dist": "build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron main.js",
    "server": "cd src && cd Back-End && npm run dev",
    "client": "cd src && cd Front-End && npm run dev",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\" \"npm run electron && wait-on http://localhost:5173 \"",
    "package-mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.12",
    "@mui/material": "^5.14.12",
    "axios": "^1.6.7",
    "bootstrap": "^5.3.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^3.9.1",
    "nodemon": "^3.0.3",
    "packager": "^0.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1"
  },
  "devDependencies": {
    "@electron/packager": "^18.1.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "npm-run-all": "^4.1.5",
    "vite": "^4.4.5",
    "wait-on": "^7.2.0"
  }
}
